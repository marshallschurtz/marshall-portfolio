---
interface Props {
  outlet: string;
  title: string;
  date: string;
  url: string;
  class?: string;
}

const { outlet, title, date, url, class: className } = Astro.props;

// Format date
const dateObj = new Date(date);
const dateStr = dateObj.toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'short', 
  day: 'numeric' 
});
---

<a 
  href={url} 
  target="_blank" 
  rel="noopener noreferrer" 
  class:list={[
    "flex flex-col p-6 bg-white/5 border border-white/5 hover:border-brand-orange/50 hover:bg-white/10 transition-all duration-300 group h-full", 
    className
  ]}
>
  <div class="flex items-center justify-between mb-4">
    <span class="font-mono text-xs text-brand-orange uppercase tracking-wider">
      {outlet}
    </span>
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      viewBox="0 0 20 20" 
      fill="currentColor" 
      class="w-4 h-4 text-concrete group-hover:text-off-white transition-colors"
    >
      <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 00-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 00.75-.75v-4a.75.75 0 011.5 0v4A2.25 2.25 0 0112.75 17h-8.5A2.25 2.25 0 012 14.75v-8.5A2.25 2.25 0 014.25 4h5a.75.75 0 010 1.5h-5z" clip-rule="evenodd" />
      <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 001.06.053L16.5 4.44v2.81a.75.75 0 001.5 0v-4.5a.75.75 0 00-.75-.75h-4.5a.75.75 0 000 1.5h2.553l-9.056 8.194a.75.75 0 00-.053 1.06z" clip-rule="evenodd" />
    </svg>
  </div>

  <h3 class="font-sans text-lg font-medium text-off-white mb-auto pr-4 group-hover:text-brand-orange transition-colors">
    {title}
  </h3>

  <div class="mt-6 pt-4 border-t border-white/10">
    <span class="font-mono text-xs text-concrete">
      {dateStr}
    </span>
  </div>
</a>
