---
const currentYear = new Date().getFullYear();
---

<footer class="bg-[var(--color-bedrock)] text-[var(--color-concrete)] py-12 px-6 md:px-12 border-t border-[#333]">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
    <!-- Brand Check -->
    <div class="col-span-1 md:col-span-1">
      <h3 class="font-mono text-[var(--color-off-white)] text-sm tracking-widest mb-4">MARSHALL SCHURTZ</h3>
    </div>

    <!-- Navigation -->
    <div class="col-span-1 md:col-span-1">
      <h4 class="font-mono text-[var(--color-brand-orange)] text-xs tracking-widest mb-4">NAVIGATION</h4>
      <ul class="font-mono text-xs space-y-2">
        <li><a href="/about-me" class="hover:text-[var(--color-off-white)] transition-colors">ABOUT ME</a></li>
        <li><a href="/research" class="hover:text-[var(--color-off-white)] transition-colors">RESEARCH</a></li>
        <li><a href="/resume" class="hover:text-[var(--color-off-white)] transition-colors">RESUME</a></li>
        <li><a href="/contact" class="hover:text-[var(--color-off-white)] transition-colors">CONTACT</a></li>
      </ul>
    </div>

    <!-- My Companies -->
    <div class="col-span-1 md:col-span-1">
      <h4 class="font-mono text-[var(--color-brand-orange)] text-xs tracking-widest mb-4">MY COMPANIES</h4>
      <ul class="font-mono text-xs space-y-2">
        <li><a href="https://merakivatravel.com" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-off-white)] transition-colors">MERAKIVA TRAVEL</a></li>
        <li><a href="https://alwayssunnytour.com" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-off-white)] transition-colors">ALWAYS SUNNY TOUR</a></li>
        <li><a href="https://archaeolist.com" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-off-white)] transition-colors">ARCHAEOLIST</a></li>
      </ul>
    </div>

    <!-- Socials / Contact -->
    <div class="col-span-1 md:col-span-1">
      <h4 class="font-mono text-[var(--color-brand-orange)] text-xs tracking-widest mb-4">CONNECT</h4>
      <ul class="font-mono text-xs space-y-2">
        <li><a href="https://www.instagram.com/marshall_schurtz/" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-off-white)] transition-colors">INSTAGRAM</a></li>
        <li><a href="https://www.linkedin.com/in/marshallschurtz/" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-off-white)] transition-colors">LINKEDIN</a></li>
        <li><a href="https://youtube.com/@MarshallSchurtz" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-off-white)] transition-colors">YOUTUBE</a></li>
        <li><a href="mailto:hello@marshallschurtz.com" class="hover:text-[var(--color-off-white)] transition-colors">EMAIL</a></li>
      </ul>
    </div>
  </div>

  <div class="max-w-7xl mx-auto pt-8 border-t border-[#333] flex flex-col md:flex-row justify-between items-center font-mono text-[10px] tracking-wider uppercase">
    <div class="flex flex-col md:flex-row items-center gap-4 w-full justify-between">
      <p>&copy; {currentYear} MARSHALL SCHURTZ. ALL RIGHTS RESERVED.</p>
      
       <!-- Scroll Top -->
       <button id="scroll-to-top" class="group flex items-center gap-2 font-mono text-xs tracking-widest hover:text-[var(--color-brand-orange)] transition-colors">
        <span class="group-hover:-translate-y-1 transition-transform duration-300">â†‘</span>
      </button>

      <p class="mt-2 md:mt-0">SITE BY KODEXI LABS</p>
    </div>
  </div>
</footer>

<script>
  const scrollBtn = document.getElementById('scroll-to-top');
  
  scrollBtn?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
</script>
