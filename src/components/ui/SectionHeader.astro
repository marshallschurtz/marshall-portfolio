---
interface Props {
  title: string;
  depth?: string;
  class?: string;
}

const { title, depth, class: className } = Astro.props;
---

<div class:list={["flex items-baseline justify-between border-b border-concrete/30 pb-4 mb-8", className]}>
  <h2 class="font-mono text-2xl md:text-3xl text-off-white uppercase tracking-tight">
    {title}
  </h2>
  {depth && (
    <span class="font-mono text-brand-orange text-sm md:text-base">
      Depth: {depth}
    </span>
  )}
</div>
