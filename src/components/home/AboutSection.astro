---
import { Image } from 'astro:assets';

// Placeholder for headshot
const headshotPlaceholder = "bg-neutral-800"; 
---

<section class="py-24 bg-bedrock text-off-white border-b border-concrete/20 relative overflow-hidden" id="about">
  <div class="container mx-auto px-4 md:px-8">
    
    <!-- Section Header -->
    <div class="flex items-center gap-4 mb-16">
      <span class="w-2 h-2 bg-brand-orange animate-pulse"></span>
      <h2 class="font-mono text-sm tracking-[0.2em] text-brand-orange uppercase">
        // About Marshall
      </h2>
      <div class="h-px bg-brand-orange/30 flex-grow"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-center">
      
      <!-- Text Content -->
      <div class="lg:col-span-7 space-y-8 relative z-10">
        <h3 class="text-3xl md:text-4xl font-bold leading-tight uppercase">
          From <span class="text-brand-orange">Ancient Sites</span> to <br/>
          <span class="text-concrete">Modern Stories</span>.
        </h3>
        
        <div class="prose prose-invert max-w-none text-concrete text-lg leading-relaxed font-light">
          <p>
            I'm Marshall Schurtz — a PhD archaeologist from the University of Pennsylvania who now builds businesses at the intersection of travel, storytelling, and technology.
          </p>
          <p>
            I spent a decade excavating ancient sites in Iraq, Lebanon, and Spain before pivoting to turn expertise into experience: archaeological tours abroad, a database of thousands of heritage sites, walking tours of Philadelphia, and a YouTube channel documenting the places most people overlook.
          </p>
          <p>
            I also consult on product, sales, marketing strategy, and data analytics. Everything I do connects back to the same impulse — <span class="text-off-white font-medium">understanding how the past shaped the present, and creating stories to explain it.</span>
          </p>
        </div>

        <div class="pt-4">
          <a href="/about-me" class="inline-flex items-center gap-3 text-brand-orange font-mono uppercase tracking-wider hover:text-white transition-colors group">
            <span class="border-b border-brand-orange group-hover:border-white pb-1 transition-colors">Read Full Bio</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Image / Profile -->
      <div class="lg:col-span-5 relative group">
        <!-- Frame -->
        <div class="relative aspect-[4/5] bg-neutral-900 border border-concrete/20 p-2">
            <!-- Inner Border -->
            <div class="absolute inset-0 border border-concrete/10 m-1 pointer-events-none z-20"></div>
            
             <!-- Corner Accents -->
             <div class="absolute -top-1 -left-1 w-6 h-6 border-t-2 border-l-2 border-brand-orange z-30"></div>
             <div class="absolute -bottom-1 -right-1 w-6 h-6 border-b-2 border-r-2 border-brand-orange z-30"></div>

            <!-- Image Placeholder -->
            <div class="w-full h-full bg-neutral-800 relative overflow-hidden grayscale group-hover:grayscale-0 transition-all duration-700">
               <img 
                 src="/assets/headshots/Marshall-Schurtz-Headshot-PurpleOverlay.png"
                 alt="Marshall Schurtz"
                 class="w-full h-full object-cover"
               />
               
               <!-- Scanline overlay -->
               <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI0IiBoZWlnaHQ9IjQiPgo8cmVjdCB3aWR0aD0iNCIgaGVpZ2h0PSIxIiBmaWxsPSJyZ2JhKDAsIDAsIDAsIDAuMik1KCIvPgo8L3N2Zz4=')] opacity-30 pointer-events-none"></div>
            </div>

            <!-- Label -->
            <div class="absolute bottom-6 left-[-1rem] bg-brand-orange text-bedrock font-mono text-xs font-bold px-3 py-1 -rotate-90 origin-bottom-left shadow-lg">
                PHD • USA
            </div>
        </div>
        
        <!-- Background Graphic Elements -->
        <div class="absolute -z-10 top-10 -right-10 w-full h-full border border-concrete/10"></div>
        <div class="absolute -z-10 bottom-10 -left-10 w-full h-full bg-concrete/5"></div>
      </div>

    </div>
  </div>
</section>
