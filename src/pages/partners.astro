            <div class="text-xs text-concrete">{sub}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SECTION 8: UPCOMING -->
  <section class="py-20 bg-[#1A1A1A] border-t border-concrete/10">
    <div class="container mx-auto px-4 md:px-8">
      <h3 class="font-mono text-concrete text-xs uppercase tracking-widest mb-12 text-center">On The Horizon</h3>
      
      <div class="max-w-3xl mx-auto space-y-8">
        {upcomingProjects.map((project, i) => (
          <div class="flex gap-6 relative group">
            {i !== upcomingProjects.length -1 && <div class="absolute left-[5.5rem] top-8 bottom-[-2rem] w-px bg-concrete/20 group-hover:bg-brand-orange/50 transition-colors"></div>}
            <div class="w-24 font-mono text-sm text-brand-orange shrink-0 pt-1 text-right">{project.date}</div>
            <div class="w-3 h-3 rounded-full bg-bedrock border border-brand-orange shrink-0 mt-2 z-10"></div>
