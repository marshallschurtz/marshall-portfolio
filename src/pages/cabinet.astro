---
import BaseLayout from '../layouts/BaseLayout.astro';
import CabinetGrid from '../components/cabinet/CabinetGrid.svelte';

// Page Metadata
const pageTitle = "Cabinet of Curiosities | Marshall Schurtz";
const pageDescription = "An interactive excavation game â€” discover artifacts that represent Marshall Schurtz's work. From archaeological digs to urban exploration.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  
  <!-- Minimal Hero -->
  <section class="pt-28 pb-8 bg-[#0D0D0D] relative overflow-hidden">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-3xl">
        <span class="font-mono text-brand-orange text-xs tracking-widest uppercase mb-3 block">
          // EXCAVATION SITE ALPHA
        </span>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-off-white mb-4 leading-tight uppercase">
          The <span class="text-brand-orange">Dig</span>
        </h1>
        <p class="text-lg text-concrete font-light leading-relaxed max-w-xl">
          Some things are buried for a reason. Others are waiting to be found. 
          <span class="text-off-white">Sweep your cursor</span> across the excavation site to uncover artifacts from my work.
        </p>
      </div>
    </div>
  </section>

  <!-- The Excavation Game -->
  <CabinetGrid client:visible />
  
  <!-- Footer -->
  <section class="py-12 bg-[#0D0D0D] border-t border-concrete/10">
    <div class="container mx-auto px-4 md:px-8 text-center">
      <p class="text-concrete/50 text-sm font-mono">
        Each artifact links to a deeper story. Discover them all.
      </p>
    </div>
  </section>

</BaseLayout>
