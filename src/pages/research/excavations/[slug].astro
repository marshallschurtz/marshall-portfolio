---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getExcavations, urlFor } from '../../../lib/sanity';
import { PortableText } from 'astro-portabletext';

export async function getStaticPaths() {
  const excavations = await getExcavations();
  return excavations.map((excavation) => ({
    params: { slug: excavation.slug.current },
    props: { excavation },
  }));
}

const { excavation } = Astro.props;

// Prepare meta
const title = `${excavation.title} | Marshall Schurtz Research`;
const description = excavation.description || `Fieldwork and excavation details for ${excavation.title}`;
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 py-12 md:py-24">
    <div class="max-w-4xl mx-auto">
      
      <!-- Back Link -->
      <a href="/research" class="inline-flex items-center gap-2 text-sm font-mono text-gray-500 hover:text-[var(--color-brand-orange)] transition-colors mb-8">
        ← BACK TO RESEARCH
      </a>

      <!-- Header -->
      <div class="mb-12">
        <p class="text-sm font-mono text-[var(--color-brand-orange)] mb-3 uppercase tracking-wider">
           {excavation.siteName ? `${excavation.siteName} • ` : ''} EXCAVATION PROJECT
        </p>
        <h1 class="text-3xl md:text-5xl font-sans font-medium text-[var(--color-off-white)] mb-6">
          {excavation.title}
        </h1>
        
        {excavation.seasons && (
            <div class="flex flex-wrap gap-2 mb-6">
                {excavation.seasons.map((season) => (
                    <span class="px-3 py-1 bg-white/10 text-sm font-mono rounded text-gray-300">
                        {season}
                    </span>
                ))}
            </div>
        )}
      </div>

      <!-- Main Image -->
      {excavation.mainImage && (
        <div class="mb-12 rounded-lg overflow-hidden border border-white/10">
          <a href={urlFor(excavation.mainImage).url()} target="_blank" class="block cursor-zoom-in group">
            <img 
              src={urlFor(excavation.mainImage).width(1200).url()} 
              alt={excavation.mainImage.alt || excavation.title}
              class="w-full h-auto group-hover:opacity-90 transition-opacity"
            />
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
              <span class="bg-black/60 text-white text-xs font-mono px-3 py-1 rounded">Click to view full size</span>
            </div>
          </a>
        </div>
      )}

      <!-- Content Grid -->
      <div class="grid md:grid-cols-3 gap-12">
        
        <!-- Left: Key Data -->
        <div class="md:col-span-1 space-y-8">
            {excavation.location && (
                <div>
                   <h3 class="text-sm font-mono text-[var(--color-brand-orange)] mb-2 uppercase">Location</h3>
                   <p class="text-gray-300 font-mono text-sm">
                     {excavation.location.lat.toFixed(4)}, {excavation.location.lng.toFixed(4)}
                   </p>
                   <a 
                     href={`https://www.google.com/maps/search/?api=1&query=${excavation.location.lat},${excavation.location.lng}`}
                     target="_blank"
                     rel="noopener noreferrer"
                     class="text-xs text-gray-500 hover:text-white underline mt-1 block"
                   >
                     View on Google Maps
                   </a>
                </div>
            )}

            {excavation.officialLink && (
                 <div>
                   <h3 class="text-sm font-mono text-[var(--color-brand-orange)] mb-2 uppercase">Official Project</h3>
                   <a 
                     href={excavation.officialLink}
                     target="_blank"
                     class="text-gray-300 hover:text-white text-sm break-words border-b border-gray-700 hover:border-white transition-colors"
                   >
                     Visit Website →
                   </a>
                 </div>
            )}
        </div>

        <!-- Right: Description & Logic -->
        <div class="md:col-span-2">
            
            <!-- Description -->
            <div class="prose prose-invert max-w-none text-gray-300 mb-12">
                 {excavation.fullDescription && excavation.fullDescription.length > 0 ? (
                     <PortableText value={excavation.fullDescription} />
                 ) : excavation.description ? (
                    <p class="whitespace-pre-wrap leading-relaxed">{excavation.description}</p>
                 ) : (
                    <p class="text-gray-500 italic">No detailed description available yet.</p>
                 )}
            </div>

            <!-- My Work / Related Items -->
            {excavation.myWork && excavation.myWork.length > 0 && (
                <div class="border-t border-white/10 pt-8 mt-8">
                    <h3 class="text-xl font-sans text-[var(--color-off-white)] mb-6">Related Work & Publications</h3>
                    <ul class="space-y-4">
                        {excavation.myWork.map((item) => (
                            <li class="bg-white/5 p-4 rounded border border-white/5 hover:border-white/20 transition-colors">
                                <span class="text-gray-300 text-sm">
                                   {item._type === 'reference' ? ' Referenced Item (Update Query to expand)' : (item.title || 'Related Item')}
                                </span>
                            </li>
                        ))}
                    </ul>
                </div>
            )}
        </div>

      </div>

      <!-- Gallery Grid with Lightbox -->
      {excavation.gallery && excavation.gallery.length > 0 && (
         <div class="mt-16 pt-16 border-t border-white/10">
            <h3 class="text-xl font-sans text-[var(--color-off-white)] mb-8">Field Gallery</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                 {excavation.gallery.map((image, index) => (
                     <a 
                       href={urlFor(image).url()} 
                       target="_blank"
                       class="aspect-square bg-black/40 rounded overflow-hidden block cursor-zoom-in group relative"
                     >
                        <img 
                          src={urlFor(image).width(400).height(400).fit('crop').url()}
                          alt={image.alt || image.caption || 'Field photo'}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        />
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-colors flex items-center justify-center">
                          <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                          </svg>
                        </div>
                        {image.caption && (
                          <div class="absolute bottom-0 left-0 right-0 bg-black/70 text-white text-xs p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            {image.caption}
                          </div>
                        )}
                     </a>
                 ))}
            </div>
         </div>
      )}

    </div>
  </div>
</BaseLayout>

<style>
  /* PortableText prose styling */
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-off-white);
  }
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-off-white);
  }
  .prose ul, .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  .prose li {
    margin-bottom: 0.5rem;
  }
  .prose strong {
    color: var(--color-off-white);
  }
  .prose a {
    color: var(--color-brand-orange);
    text-decoration: underline;
  }
  .prose a:hover {
    color: var(--color-off-white);
  }
</style>
