---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';

const pageTitle = "Contact | Marshall Schurtz";
const pageDescription = "Get in touch for collaborations, speaking engagements, or tour inquiries.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="pt-24 pb-20 min-h-screen flex items-center">
    <div class="container mx-auto px-6 md:px-12">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        
        {/* Info */}
        <div>
           <span class="font-mono text-brand-orange text-xs tracking-widest uppercase mb-4 block">
             // CONTACT
           </span>
           <h1 class="text-4xl md:text-6xl font-bold text-off-white mb-6 leading-tight">
             LET'S DIG<br />DEEPER.
           </h1>
           <p class="text-concrete text-lg mb-8 max-w-md">
             Interested in collaborating on a project, booking a tour, or discussing the hidden infrastructure of our world? Reach out.
           </p>
           
           <div class="space-y-4 font-mono text-sm text-off-white">
             <div class="flex items-center gap-4">
               <span class="text-brand-orange w-24">EMAIL</span>
               <a href="mailto:hello@marshallschurtz.com" class="hover:text-brand-orange transition-colors">hello@marshallschurtz.com</a>
             </div>
             <div class="flex items-center gap-4">
               <span class="text-brand-orange w-24">SOCIAL</span>
               <div class="flex gap-4">
                 <a href="https://www.instagram.com/marshallschurtz/" target="_blank" rel="noopener noreferrer" class="hover:text-brand-orange transition-colors">INSTAGRAM</a>
                 <a href="https://www.linkedin.com/in/marshallschurtz/" target="_blank" rel="noopener noreferrer" class="hover:text-brand-orange transition-colors">LINKEDIN</a>
                 <a href="https://youtube.com/@MarshallSchurtz" target="_blank" rel="noopener noreferrer" class="hover:text-brand-orange transition-colors">YOUTUBE</a>
               </div>
             </div>
           </div>
        </div>

        {/* Form */}
        <div class="bg-neutral-900 border border-concrete/20 p-8">
           <form id="contact-form" class="space-y-6" action="#" method="POST" data-netlify="true" name="contact">
             <div>
               <label for="name" class="block font-mono text-xs text-brand-orange uppercase mb-2">Name</label>
               <input type="text" id="name" name="name" class="w-full bg-[#1A1A1A] border border-concrete/20 text-off-white p-3 focus:border-brand-orange focus:outline-none transition-colors" placeholder="Your Name" required />
             </div>
             <div>
               <label for="email" class="block font-mono text-xs text-brand-orange uppercase mb-2">Email</label>
               <input type="email" id="email" name="email" class="w-full bg-[#1A1A1A] border border-concrete/20 text-off-white p-3 focus:border-brand-orange focus:outline-none transition-colors" placeholder="Your Email" required />
             </div>
             <div>
               <label for="message" class="block font-mono text-xs text-brand-orange uppercase mb-2">Message</label>
               <textarea id="message" name="message" rows="5" class="w-full bg-[#1A1A1A] border border-concrete/20 text-off-white p-3 focus:border-brand-orange focus:outline-none transition-colors" placeholder="How can I help you?" required></textarea>
             </div>
             <button type="submit" class="w-full bg-brand-orange text-bedrock font-mono font-bold uppercase py-4 hover:bg-white transition-colors tracking-widest">
               SEND MESSAGE
             </button>
           </form>
        </div>

      </div>



      <!-- Discreet Partner Link -->
      <div class="mt-20 pt-8 border-t border-concrete/10 text-center">
         <p class="text-xs text-concrete/40 font-mono">
           Interested in partnering on the YouTube channel? <a href="/partners" class="hover:text-brand-orange transition-colors underline decoration-concrete/20 underline-offset-4">Media Kit & Partnership Details</a>
         </p>
      </div>

    </div>
  </section>

  <script>
    const form = document.getElementById('contact-form');
    if (form) {
      form.addEventListener('submit', () => {
        // Push event to dataLayer
        // @ts-ignore
        window.dataLayer = window.dataLayer || [];
        // @ts-ignore
        window.dataLayer.push({
          'event': 'form_submit',
          'form_id': 'contact-form'
        });
      });
    }
  </script>
</BaseLayout>
